<?xml version="1.0" encoding="utf-8"?>
<winuiex:WindowEx
    x:Class="noti.NotiWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:noti"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:winuiex="using:WinUIEx"
    mc:Ignorable="d"
    Title="noti"
    IsResizable="False"
    IsAlwaysOnTop="True"
    IsTitleBarVisible="False"
    Width="350"
    Height="150">

    <Grid Background="Transparent"
          Tapped="OnWidgetClicked">

        <Grid x:Name="SpiderPanel"
              HorizontalAlignment="Right"
              VerticalAlignment="Top"
              Margin="0,0,20,0">

            <Grid.RenderTransform>
                <TranslateTransform x:Name="SpiderTranslate" Y="-350"/>
            </Grid.RenderTransform>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Spider web thread + spider -->
            <StackPanel Grid.Row="0"
                        HorizontalAlignment="Center">
                <!-- Web thread line -->
                <Border Background="Transparent"
                        Width="20"
                        Height="45"
                        HorizontalAlignment="Center"/>
                <!-- Spider image -->
                <Image Source="Assets/spider.PNG"
                       Width="100"
                       Height="100"
                       Margin="10,-40,30,-15"
                       HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Speech bubble -->
            <Grid Grid.Row="1"
                  Margin="-230,-40,20,0"
                  HorizontalAlignment="Center">
                <!-- Bubble tail (triangle pointing right toward spider) -->
                <Polygon Points="0,0 10,8 0,16"
                         Fill="#EE1E1E1E"
                         HorizontalAlignment="Right"
                         VerticalAlignment="Top"
                         Margin="0,12,-6,0"/>
                <!-- Bubble body -->
                <Border Background="#EE1E1E1E"
                        CornerRadius="10"
                        Padding="14,10"
                        HorizontalAlignment="Left"
                        MaxWidth="160">
                    <TextBlock x:Name="MessageText"
                               Text="=_="
                               FontSize="13"
                               Foreground="White"
                               TextWrapping="Wrap"
                               TextAlignment="Center"/>
                </Border>
            </Grid>

        </Grid>

    </Grid>
</winuiex:WindowEx>
